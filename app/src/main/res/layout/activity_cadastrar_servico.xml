<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_cadastrar_servico"
    android:background="@drawable/imagem"
    android:focusable="true" android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.desenvolvedor.michelatz.projetosam.CadastrarServico">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_main"
        android:layout_width="match_parent"
        android:layout_alignParentLeft="true"
        android:elevation="4dp"
        android:minHeight="?attr/actionBarSize"
        android:layout_height="60dp"
        android:background="@drawable/botao"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="70dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">


            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tabela"
                android:layout_marginTop="10dp"
                android:background="@drawable/border"
                android:shrinkColumns="*"
                android:stretchColumns="*">

                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent">

                    <Spinner
                        android:layout_width="180dp"
                        android:id="@+id/spinnerServico"
                        style="@style/spinner_style"
                        android:layout_marginBottom="20dp"
                        android:layout_height="45dp" />

                    <Button
                        android:text="+"
                        android:layout_width="20dp"
                        android:layout_height="55dp"
                        android:layout_marginTop="13dp"
                        android:layout_marginRight="5dp"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:onClick="addTipoServico"
                        android:background="@drawable/botao"
                        android:id="@+id/button" />

                </TableRow>

                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal">

                    <TextView
                        android:text="  Turno disponível:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_span="2"
                        android:textStyle="bold"
                        android:typeface="sans"
                        android:textSize="17dp"
                        android:id="@+id/textView3" />

                </TableRow>

                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal">

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text"
                        android:layout_span="2"
                        android:layout_marginLeft="30dp"
                        android:id="@+id/RadioGrupTurno"
                        android:checkedButton="@+id/qualquer" >

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/qualquer"
                            android:text="Qualquer turno" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/manha"
                            android:text="Manhã" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tarde"
                            android:text="Tarde" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/noite"
                            android:text="Noite" />

                    </RadioGroup>

                </TableRow>

                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal">

                    <TextView
                        android:text="  Dia da semana disponível:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_span="2"
                        android:textStyle="bold"
                        android:typeface="sans"
                        android:textSize="17dp" />

                </TableRow>

                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:gravity="center_horizontal">


                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text"
                        android:layout_span="2"
                        android:layout_marginLeft="30dp"
                        android:id="@+id/RadioGrupDia"
                        android:checkedButton="@+id/qualquerDia" >

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/qualquerDia"
                            android:text="Qualquer dia" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/diaSemana"
                            android:text="Segunda a sexta" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/finalSemana"
                            android:text="Finais de Semana" />

                    </RadioGroup>


                </TableRow>

                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal">


                    <Button
                        android:text="Salvar"
                        android:onClick="salvar"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/button6"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/botao"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true" />

                </TableRow>

            </TableLayout>
        </RelativeLayout>
    </ScrollView>

    <include
        android:id="@+id/inc_tb_botton_usuario"
        layout="@layout/toolbar_botton"/>

</RelativeLayout>
